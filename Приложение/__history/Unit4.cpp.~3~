//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit4.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm4 *Form4;
//---------------------------------------------------------------------------
__fastcall TForm4::TForm4(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm4::Edit1Change(TObject *Sender)
{
	if (Form4->Edit1->Text == "" || Form4->Edit2->Text == "" || Form4->Edit3->Text == "") {
		Form4->Button1->Enabled = false;
	}
	else {
        Form4->Button1->Enabled = true;
	}
}
//---------------------------------------------------------------------------
void __fastcall TForm4::Button1Click(TObject *Sender)
{
	Form4->ADOQuery1->Active = false;
	Form4->ADOQuery1->SQL->Text = "SELECT `Название издательства` FROM `Издательства`";
	Form4->ADOQuery1->Active = true;
	ShowMessage(Form4->ADOQuery1->FieldByName("Название издательства")->Text);
	Form4->ADOQuery1->Eof;
	Form4->ADOQuery1->Next();
	ShowMessage(Form4->ADOQuery1->FieldByName("Название издательства")->Text);
}
//---------------------------------------------------------------------------

